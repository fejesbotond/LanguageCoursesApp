<%- include('header') -%>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="nav-link disabled">Diák: <%=student.username%></a>
        <a class="navbar-brand" href="/logout">Kilépés</a>
    </div>
</nav>
<div class="container">
    <div class="row text-center mt-5 mb-4">
        <h1>Kurzusaim</h1>
    </div>
</div>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Név</th>
                <th>Nyelv</th>
                <th>Szint</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%kurzusok.forEach(function(course){%>
                <tr>
                    <td><%=course.name%></td>
                    <td><%=course.language%></td>
                    <td><%=course.level%></td>
                    <td style="width: 20px">
                        <a href="/student/<%=student._id%>/kurzusaim/<%=course._id%>/del" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            <%}); %> 
        </tbody>
    </table>
    <div class="row text-center">
        <div>
            <a href="/student/<%=student._id%>/availableCourses" class="btn btn-success btn-lg mt-4">Új kurzus</a>
        </div>
    </div>
</div>
<%- include('footer') -%>